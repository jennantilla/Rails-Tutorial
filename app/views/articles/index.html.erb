<h1>All Blog Articles</h1>

<%= button_to "New Post", new_article_path, :method => "get" %>

<br>
<br>

<table>
  <tr>
    <th class="index-header">Title</th>
    <th class="index-header">Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td class="post-actions"><%= button_to 'Show', article_path(article), :method => "get" %></td>
      <td class="post-actions"><%= button_to 'Edit', article_path(article), :method => "get" %></td>
      <td class="post-actions"><%= button_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>